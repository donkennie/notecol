<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
  <div class="flex flex-col py-8">
    <%= render @note %>
    <div class="flex">
      <%= link_to "Edit this note", edit_note_path(@note), class: "border border-black mt-2 bg-black text-white rounded-md py-3 px-6 hover:bg-gray-700" %>
      <%= link_to "Back to notes", notes_path, class: "ml-2 border border-black mt-2 bg-black text-white rounded-md py-3 px-6 hover:bg-gray-700" %>
    </div>


    <div class="mt-8">
      <%= button_to "Destroy this note", note_path(@note), method: :delete, class: "border border-red-500 bg-red-500 rounded-md py-2 px-6 hover:bg-gray-200" %>
    </div>
  </div>
</div>
