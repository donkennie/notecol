<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
  <div class="flex flex-col items-center justify-center">
    <%=link_to 'Notecol', root_path, class: "font-medium text-3xl py-8" %>  
    <div class="border border-black rounded-md flex flex-col items-center py-4 px-6">
      <h2 class="font-medium text-2xl mb-6">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="flex flex-col my-4 min-w-96">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'rounded-md border border-black mt-1 focus:border-black' %>
        </div>
      
        <div class="flex flex-col my-4">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:'rounded-md border border-black mt-1 focus:border-black' %>
        </div>
      
        <div class="flex flex-col my-4 ">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'rounded-md border border-black mt-1 focus:border-black' %>
        </div>
      
        <div class="flex flex-col my-4 ">
          <%= f.submit "Sign up" %>
        </div>

  
      <% end %>
      
      <%= render "devise/shared/links" %>      
    </div>
  </div>
</div>

