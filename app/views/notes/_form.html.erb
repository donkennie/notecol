<%= form_with(model: note, class: "contents") do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col my-4">
    <%= form.label :title %>
    <%= form.text_field :title, class: "rounded-md border border-black mt-1 focus:ring-black " %>
  </div>

  <div class="flex flex-col my-4">
    <%= form.label :description %>
    <%= form.text_area :description, row:5, class: "rounded-md border border-black mt-1 focus:ring-black " %>
  </div>

  <div class="flex flex-col my-4">
    <%= form.label :color %>
    <%= form.text_field :color, class: "rounded-md border border-black mt-1 focus:ring-black " %>
  </div>

  <div class="flex flex-col my-4">
    <%= form.label :color, 'Select color' %>
    <div class="flex gap-4">
    <label class="flex gap-1 items-center">
      <%= form.radio_button :color, 'bg:amber-300' %>
      <div class="bg-amber-300 h-8 w-8 rounded">
      </div>
    </label>
</div>


  <div class="flex gap-4">
      <label class="flex gap-1 items-center">
        <%= form.radio_button :color, 'bg:blue-300' %>
        <div class="bg-blue-300 h-8 w-8 rounded">
        </div>
      </label>
  </div>
</div>

  <div class="inline">
    <%= form.submit class: "border border-black mt-2 bg-black text-white rounded-md py-3 px-6 hover:bg-gray-700" %>
  </div>
<% end %>
